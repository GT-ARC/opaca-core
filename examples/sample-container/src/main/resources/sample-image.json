{
  "imageName": "sample-agent-container-image",

  "requires": ["sample-requirement"],
  "provides": ["sample-provision"],

  "name": "Sample OPACA Agent Container",
  "version": "0.1.9",
  "description": "Just a sample container doing nothing but receiving and reacting to API calls",
  "provider": "DAI-Lab",

  "apiPort": 8082,
  "extraPorts": {
    "8888": {
      "protocol": "TCP",
      "description": "Simple Web Server for testing TCP port"
    },
    "8889": {
      "protocol": "UDP",
      "description": "Simple Web Server for testing UDP port"
    }
  },
  "definitions": {
    "Car": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Car",
      "description": "A car",
      "type": "object",
      "properties": {
        "model": {
          "description": "The car model",
          "type": "string"
        },
        "passengers": {
          "description": "The list of passengers",
          "type": "array",
          "items": {
            "type": "String"
          }
        },
        "isFunctional": {
          "description": "Flag if the car is functional",
          "type": "boolean",
          "default": true
        },
        "constructionYear": {
          "description": "The year the car was made",
          "type": "integer"
        }
      },
      "required": ["model", "passengers", "constructionYear"]
    }
  },
  "definitionsByUrl": {},
  "parameters": [
    {
      "name": "database",
      "type": "string",
      "required": false,
      "confidential": false,
      "defaultValue": "mongodb"
    },
    {
      "name": "username",
      "type": "string",
      "required": true,
      "confidential": false
    },
    {
      "name": "password",
      "type": "string",
      "required": true,
      "confidential": true
    }
  ]
}
