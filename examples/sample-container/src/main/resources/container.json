{
  "imageName": "sample-agent-container-image",

  "requires": ["sample-requirement"],
  "provides": ["sample-provision"],

  "name": "Sample JIAC++ Agent Container",
  "version": "0.1.9",
  "description": "Just a sample container doing nothing but receiving and reacting to API calls",
  "provider": "DAI-Lab",

  "apiPort": 8082,
  "extraPorts": {
    "8888": {
      "protocol": "TCP",
      "description": "Simple Web Server for testing TCP port"
    },
    "8889": {
      "protocol": "UDP",
      "description": "Simple Web Server for testing UDP port"
    }
    
  },
  "definitions": {
    "car": {
      "inherits": "vehicle",
      "parameters": {
        "name": {
          "name": "name",
          "type": "String",
          "optional": "false"
        },
        "pessengers": {
          "name": "pessengers",
          "type": "Array",
          "optional": "false",
          "items": {
            "type": "human"
          }
        },
        "isCar": {
          "name": "isCar",
          "type": "Boolean",
          "optional": "false"
        },
        "number": {
          "name": "number",
          "type": "String",
          "optional": "false"
        },
        "carNextToMe": {
          "name": "carNextToMe",
          "type": "car",
          "optional": "false"
        }
      }
    },
    "vehicle": {
      "inherits": "none",
      "parameters": {
        "vehicle license": {
          "name": "vehicle license",
          "type": "String",
          "optional": "false"
        },
        "num of wheels": {
          "name": "num of wheels",
          "type": "Number",
          "optional": "false"
        }
      }
    }
  }

}
