{
  "openapi": "3.0.1",
  "info": {
    "title": "OPACA Runtime Platform",
    "description": "Use this Web API to interact with the OPACA Runtime Platform and its Agent Containers. Here's a short\ndescription of the different groups of API routes:\n* **users**: view, add or delete user accounts for this platform\n* **agents**: interact with agents inside the containers, e.g. by sending them messages, invoking actions\n* **authentication**: login to request an access token\n* **containers**: view, deploy or remove Agent Containers running on this platform\n* **connections**: view, add or remove other Runtime Platforms connected to this platform\n* **info**: get basic information on this Runtime Platform and its properties\n",
    "version": "0.2"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/invoke/{action}": {
      "post": {
        "summary": "Invoke action at any agent that provides it",
        "operationId": "invoke",
        "parameters": [
          {
            "name": "action",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "timeout",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": -1
            }
          },
          {
            "name": "containerId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "forward",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": {
                  "$ref": "#/components/schemas/JsonNode"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/JsonNode"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN",
              "CONTRIBUTOR",
              "USER",
              "GUEST"
            ]
          },
          "privileges": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Message": {
        "type": "object",
        "properties": {
          "payload": {
            "$ref": "#/components/schemas/JsonNode"
          },
          "replyTo": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
